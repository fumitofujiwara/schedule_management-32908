<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>ユーザー情報編集</h2>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user, local: true do |f|%>
        
        <div class="field">
          <div class='field-label'>
            <%= f.label "部署" %><br />
          </div>
          <%= f.collection_select(:department_id, Department.all, :id, :name, {}, {class:"field-input"}) %>
        </div>
        <div class="field">
          <div class='field-label'>
            <%= f.label "役職" %><br />
          </div>
          <%= f.text_field :position, class:"field-input" %>
        </div>
      <div class="field">
        <div class='field-label'>
          <%= f.label "メールアドレス" %><br />
        </div>
          <%= f.email_field :email, class:"field-input" %>
      </div>
    <div class="field">
      <div class='field-label'>
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
          <em>(英数字<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
      </div>
        <%= f.password_field :password, class:"field-input" %>
    </div>

    <div class="field">
      <div class='field-label'>
        <%= f.label "パスワード(確認)" %><br />
      </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"field-input" %>
    </div>
    <div class="actions">
      <%= f.submit "更新する", class: :btn %>
    </div>
    <% end %>

    <div class="actions-return">
      <%= link_to "一つ前へ戻る", root_path, class: :btn %>
    </div>
  </div>
</div>