<%= render "shared/header" %>

<%= link_to 'スケジュール投稿', new_schedule_path, class:"schedule-up" %>

<% if user_signed_in? %>
  <% @schedules.each do |schedule| %>
    <li class="list">
      <ul>登録者
      <%= schedule.user.department.name %>
      <%= schedule.user.last_name %>
      <%= schedule.user.first_name %></ul>
      <ul>開始時刻
      <%= schedule.start_date %></ul>
      <ul>終了時刻
      <%= schedule.ending_date %></ul>
      <ul>予定の内容
      <%= schedule.content %></ul>
      <ul>予定の詳細
      <%= schedule.detail %></ul>
      <ul>
      <%= link_to 'スケジュール編集', edit_schedule_path(schedule.id), class: "schedule-update" %>
      </ul>
      <ul>
      <%= link_to 'スケジュール削除', schedule_path(schedule.id), method: :delete, class: "schedule-delete" %>
      </ul>
    </li>
  <% end %>
<% end %>