<%= render "shared/second-header" %>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
            <%= f.label "名字", class:"field-label" %><br />
            <%= f.text_field :last_name, class:"field-input" %>
        </div>
        <div class="field">
          <div class='field-label'>
            <%= f.label "名前" %><br />
          </div>
            <%= f.text_field :first_name, class:"field-input" %>
        </div>
        <div class="field">
          <div class='field-label'>
            <%= f.label "名字(フリガナ)" %><br />
          </div>
            <%= f.text_field :last_name_furigana, class:"field-input" %>
        </div>
        <div class="field">
          <div class='field-label'>
            <%= f.label "名前(フリガナ)" %><br />
          </div>
            <%= f.text_field :first_name_furigana, class:"field-input" %>
        </div>
      <div class="field">
        <div class='field-label'>
          <%= f.label "部署" %><br />
        </div>
          <%= f.collection_select(:department_id, Department.all, :id, :name, {}, {class:"field-input"}) %>
      </div>
      <div class="field">
        <div class='field-label'>
          <%= f.label "役職" %><br />
        </div>
          <%= f.text_field :position, class:"field-input" %>
      </div>
      <div class="field">
        <div class='field-label'>
          <%= f.label "メールアドレス" %><br />
        </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field-input" %>
      </div>
    <div class="field">
      <div class='field-label'>
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
          <em>(英数字<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
      </div>
        <%= f.password_field :password, autocomplete: "new-password", class:"field-input" %>
    </div>

    <div class="field">
      <div class='field-label'>
        <%= f.label "パスワード(確認)" %><br />
      </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"field-input" %>
    </div>

    <div class="actions">
      <%= f.submit "アカウント作成", class: 'btn' %>
    </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>

