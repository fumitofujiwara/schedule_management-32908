<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Log in</h2>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class='field-label'>
            <%= f.label "メールアドレス" %><br />
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input" %>
        </div>
        <div class="field">
          <div class="field-label">
          <%= f.label :password %><br />
            <i>(英数字6文字以上)</i>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", class:"field-input" %>
        </div>
        <div class="actions">
          <%= f.submit "Log in", class: "btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
